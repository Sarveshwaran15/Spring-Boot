package com.student.student_management.model;

import jakarta.persistence.*;

@Entity // can be act as entity class or layer which represents the datastructure of the entire model 
@Table(name="students") //JPA uses the ORM concept behind so it will automatically create the table based on the name which we are providing
public class Student {

    @Id // specifying that it is a primary key
    @GeneratedValue(strategy = GenerationType.IDENTITY) // specifying that the Id will generate automatically (auto-update)
    private Long id;
    private String name;
    private String email;
    private int age;

    public Student(Long id, String name, String email, int age) {
        this.id = id;
        this.name = name;
        this.email = email;
        this.age = age;
    }

    public Long getId() {
        return id;
    }

    public void setId(Long id) {
        this.id = id;
    }

    public String getName() {
        return name;
    }

    public void setName(String name) {
        this.name = name;
    }

    public String getEmail() {
        return email;
    }

    public void setEmail(String email) {
        this.email = email;
    }

    public int getAge() {
        return age;
    }

    public void setAge(int age) {
        this.age = age;
    }
}
